resource_name = "sensor"
script/source = "extends LogicBlocks

var sensor_menu_scene = preload(\"res://Scenes/sensor_selector.tscn\")
var sensor_menu

func load_value(value: Array):

	%a.text = value[1]
	%b.text = value[2]
	%c.text = value[3]
	
	pass

func option_get_item(node: OptionButton, optext : String):
	for i in range(node.get_popup().item_count):
		if node.get_item_text(i) == optext:
			node.select(i)

func compile():
	
	return(\"sensor \" + %a.text + \" \" + %b.text + \" \" + %c.text + \"\\n\")

func _on_unit_selected(unit : String ):
	%c.text = unit
	sensor_menu.queue_free()

func _on_select_button_pressed() -> void:
	
	
	if sensor_menu:
		sensor_menu.queue_free()
		
	else:
		
		if input_node.get_child_count() == 0 and get_parent() == origin_node:
			%FreeControl.position = %SelectButton.position + Vector2(0, 30)
			
			sensor_menu = sensor_menu_scene.instantiate()
			sensor_menu.select_owner = %FreeControl
			
			input_node.add_child( sensor_menu )
			sensor_menu.z_index = 16
			sensor_menu.unit_selected.connect(_on_unit_selected)
		
	pass # Replace with function body.


func _on_tree_exited() -> void:
	if sensor_menu:
		sensor_menu.queue_free()
"

