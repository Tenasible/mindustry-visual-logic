resource_name = "unit_move"
script/source = "extends LogicBlocks

func load_value(value: Array):
	option_get_item(%op1,value[1])
	%a.text = value[2]
	%b.text = value[3]
	%c.text = value[4]
	
	pass

func option_get_item(node: OptionButton, optext : String):
	for i in range(node.get_popup().item_count):
		if node.get_item_text(i) == optext:
			node.select(i)
			_on_op_1_item_selected(i)


func compile():
	
	var op_list = {
		0 : \"move\" ,
		1 : \"approach\" ,
		2 : \"pathfind\" ,
		3 : \"autoPathfind\" ,
	}
	
	return(\"ucontrol \" + op_list[%op1.selected] + \" \" + %a.text + \" \" + %b.text + \" \" + %c.text + \" 0 0\\n\")



func _on_op_1_item_selected(index: int) -> void:
	
	if index == 0 or index == 2:
		
		%Label1.visible = true
		%Label2.visible = true
		%a.visible = true
		%b.visible = true
		
		%Label3.visible = false
		%c.visible = false
		
	elif index == 1:
		
		%Label1.visible = true
		%Label2.visible = true
		%Label3.visible = true
		%a.visible = true
		%b.visible = true
		%c.visible = true
	
	elif index == 3:
		
		%Label1.visible = false
		%Label2.visible = false
		%Label3.visible = false
		%a.visible = false
		%b.visible = false
		%c.visible = false
	
	pass # Replace with function body.
"

