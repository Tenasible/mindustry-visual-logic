resource_name = "unit_type"
script/source = "extends LogicBlocks

var unit_menu_scene = preload(\"res://Scenes/unit_select_container.tscn\")
var unit_menu

func load_value(value: Array):
	%a.text = value[1]

	pass

func option_get_item(node: OptionButton, optext : String):
	for i in range(node.get_popup().item_count):
		if node.get_item_text(i) == optext:
			node.select(i)


func compile():
	return(\"ubind \" + %a.text + \"\\n\")



func _on_button_toggled(toggled_on: bool) -> void:
	%TagLabel1.visible = toggled_on
	%TagLabel2.visible = toggled_on
	pass # Replace with function body.


func _on_unit_choose_button_pressed() -> void:
	if unit_menu:
		unit_menu.queue_free()
		
	else:
		
		if input_node.get_child_count() == 0 and get_parent() == origin_node:
			%FreeControl.position = %UnitChooseButton.position + Vector2(0, 30)
			
			unit_menu = unit_menu_scene.instantiate()
			unit_menu.select_owner = %FreeControl
			
			input_node.add_child( unit_menu )
			unit_menu.z_index = 16
			unit_menu.button_pressed.connect(_on_unit_chooser_button_pressed)
		
	pass # Replace with function body.



func _on_unit_chooser_button_pressed(unit: String) -> void:
	%a.text = unit
	if unit_menu:
		unit_menu.queue_free()
	
	pass # Replace with function body.


func _on_tree_exiting() -> void:
	
	if unit_menu:
		unit_menu.queue_free()
	
	pass # Replace with function body.
"

